{
  "uid": "admin-dashboard",
  "title": "Admin - Backend & Nginx",
  "tags": ["performance", "backend", "nginx"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Backend Up",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"backend\"}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "id": 2,
      "title": "Nginx Up",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"nginx\"}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "id": 3,
      "title": "Backend Error Rate (5xx) - last 5m",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "job:backend:request_error_rate",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 }
    },
    {
      "id": 4,
      "title": "Backend P95 Latency - last 5m",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "job:backend:request_latency_seconds:95",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 6, "h": 6 }
    },
    {
      "id": 5,
      "title": "Backend RPS (1m)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"backend\"}[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 10, "w": 6, "h": 6 }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
